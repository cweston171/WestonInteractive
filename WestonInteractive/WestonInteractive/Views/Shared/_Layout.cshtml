<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ app.title }}</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/wiAppControllers")
    @Scripts.Render("~/bundles/wiAppServices")

    <script src="//use.typekit.net/pep5wbh.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
</head>
<body data-ng-app="westonInteractive" data-ng-controller="AppCntrl">
    <main-menu menus="menus"></main-menu>

    <main class="view-animate-container">
        @RenderBody()
    </main>

    <footer class="container">
        <p>&copy; @DateTime.Now.Year - {{ app.title }}</p>
    </footer>

    @Html.Partial("_Loader")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
