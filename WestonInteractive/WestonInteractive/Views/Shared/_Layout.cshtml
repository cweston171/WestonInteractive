<!DOCTYPE html>
<html data-ng-app="westonInteractive" data-ng-controller="app.shared">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ app.title }}</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/wiAppControllers")
    @Scripts.Render("~/bundles/wiAppServices")
</head>
<body>
    @Html.Partial("Navigation")

    <main class="container body-content">
        <!-- main banner -->
        <section class="banner" ng-controller="app.index">
            <!-- angular carousel  -->
            <carousel class="carousel" interval="cInterval" no-wrap="noWrapSlides">
                <!-- slide -->
                <slide class="slideset" ng-repeat="slideSet in slider.slideSets" active="slideset.active">
                    <!-- grid -->
                    <div ng-repeat="slide in slideSet" class="slide">
                        <div style="background: url('{{ slider.imgPath + slider.imgPrefix + slide.num + slider.imgSuffix }}');">
                            <div class="overlay">
                                <div class="star"> </div>
                                <div class="featured">Featured</div>
                                <div class="carousel-caption">
                                    <h3>{{ slide.title }}</h3>
                                    <p>{{ slide.caption }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!--/grid -->
                </slide>
                <!--/slide -->
            </carousel>
            <!--/angular carousel -->
        </section>
        <!--/main banner -->

        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - {{ app.title }}</p>
        </footer>
    </main>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
